<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="studentbean" class="uz.mkh.springcoreapp.dependencyinjection.example1.Student">
        <property name="name" value="Mambo Samba"></property>
    </bean>

<!--    AOP-1-->
    <bean id="obj" class="uz.mkh.springcoreapp.aop.Validator"></bean>
    <bean id="ba" class="uz.mkh.springcoreapp.aop.ThrowsAdvisor"></bean>

    <bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="obj"></property>
        <property name="interceptorNames">
            <list>
                <value>ba</value>
            </list>
        </property>
    </bean>

<!--    AOP aspectjs-->
    <bean id="opBean" class="uz.mkh.springcoreapp.aspectJs.Operation">   </bean>
    <bean id="trackMyBean" class="uz.mkh.springcoreapp.aspectJs.TrackOperation"></bean>

    <bean class="org.springframework.aop.aspectj.annotation.AnnotationAwareAspectJAutoProxyCreator"></bean>
</beans>